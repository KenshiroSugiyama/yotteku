<h2 class="text-center my-4">ユーザー登録</h2>

<div class="row mx-4 text-center">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @user,url: users_path,method: :post,  local: true) do |f| %>
      
      <%= f.hidden_field :uid ,value: params[:uid]%>
      <div class="form-group">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, '電話番号' %>
        <%= f.telephone_field :email, class: 'form-control' %>
      </div>

      <%= f.submit '登録', class: 'btn btn-info btn-block mt-5' %>
    <% end %>
  </div>
</div>