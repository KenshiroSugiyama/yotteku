<div class="text-center my-4">
  <h4>スカウト内容確認</h4>
</div>
<div class="row mx-5">
  <div class="col-sm-6 offset-sm-3 text-center">
    <div class="mb-1">
    <label>店名</label>:
        <%= @res.name%>
    </div>

    <div class="mb-1">
    <label>住所</label>:
        <%= @res_info.address%>
    </div>

    <div class="mb-1">
    <label>開始時間</label>:
        <%= @scout.start_time%>
    </div>
    <div class="mb-1">
    <label>値段</label>:
        <%= @scout.price%>
    </div>
    <div class="mb-1">
    <label>お酒</label>:
        <%= @scout.name%>
    </div>
    <div class="mb-1">
    <label>席時間</label>:
        <%= @scout.drink_time%>
    </div>
    <div class="mb-1">
    <label>提供内容</label>:
        <%= @scout.content%>
    </div>
    
    <div class="mb-1">
    <label>メッセージ</label>:
        <%= @scout.hope %>
    </div>
    
  </div>
</div>
