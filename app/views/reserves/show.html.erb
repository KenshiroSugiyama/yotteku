<div class="text-center my-4">
  <h4>予約内容確認</h4>
</div>
<div class="row mx-5 bg-light p-4">
  <div class="col-sm-6 offset-sm-3">
    <div class="mb-1">
    <label class="mr-2">予約者名：</label>
        <%= @user.name%>
    </div>
    <div class="mb-1">
    <label class="mr-2">電話番号：</label>
        <%= @user.email%>
    </div>
    <div class="mb-1">
    <label class="mr-2">人数：</label>
        <%= @req.number_of_people%>
    </div>
    <div class="mb-1">
    <label class="mr-2">開始時間：</label>
        <%= @scout.start_time%>
    </div>
    <div class="mb-1">
    <label class="mr-2">値段：</label>
        <%= @scout.price%>円
    </div>
    <div class="mb-2">
    <label class="mr-2">お酒：</label>
        <%= @scout.beer%>
    </div>
    <div class="mb-3">
    <div class="mb-1">提供内容：</div>
        <%= @scout.content%>
    </div>
    <div class="mb-3">
    <div class="mb-1">要望：</div>
        <%= @req.hope%>
    </div>
    <div class="mb-1">
    <div class="mb-1">メッセージ：</div>
        <%= @scout.hope %>
    </div>
    
  </div>
</div>
