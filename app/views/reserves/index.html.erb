<h4 class="text-center m-4">予約一覧</h4>
<div class="text-center mx-3">
    <% if @scout.present?%>
        <% @scout.each do |scout|%>
            <% req = Request.find(scout.request_id) %>
            <% @user = User.find(req.user_id) %>
            <div class="bg-light p-4">
                <%= link_to "#{@user.name}様 　#{scout.start_time}~",reserf_path(id: scout.id) %>
            </div>
        <% end %>
    <% else %>
        <div>予約はありません。</div>
    <% end %>
</div>